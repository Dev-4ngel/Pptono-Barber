---
import Layout from "../layouts/Layout.astro";
import "../styles/login.css";
---

<Layout title="Login | Pptoño barber">
  <main class="login">
    <form action="/" method="POST">
      <h2>Inicio de sesión</h2>
      <label for="email">Correo:</label>
      <input type="email" placeholder="Ingrese su correo" required />
      <label for="password">Contraseña:</label>
      <input type="password" placeholder="Ingrese su contraseña" required />
      <div>
        <button type="submit" class="accept">Iniciar sesión</button>
        <button class="close" type="button">Cancelar</button>
      </div>
    </form>
    <p>
      ¿No tienes cuenta? <a href="/singup">Regístrate</a>
    </p>
  </main>
</Layout>
